<h1><%= @place["name"] %></h1>

<% if session["user_id"] %>
  <p>
    <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-primary">New Entry</a>
  </p>
<% end %>
<div class="row">
  <% for entry in @entries %>
    <div class="col-md-4">
      <h3><%= entry["title"] %></h3>
      <h4><%= entry["occurred_on"] %></h4>
      <p><%= entry["description"] %></p>
    </div>
  <% end %>
</div>
<p>
  <a href="/places">Back to All Places</a>
</p>